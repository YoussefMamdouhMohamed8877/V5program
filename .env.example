# ============================================
# Fast Learn Programming - Environment Variables
# نسخ هذا الملف إلى .env وتعديل القيم
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=fast_learn_db

# JWT Configuration
# IMPORTANT: Change these in production!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_this_too_987654321
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - للإصدارات المستقبلية)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@fastlearn.com

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this_in_production

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500

# Admin Default Credentials (للإعداد الأولي فقط)
# كلمة المرور المشفرة في database.sql
ADMIN_EMAIL=admin@fastlearn.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Frontend URL (for links in emails, etc.)
FRONTEND_URL=http://localhost:3000

# API Version
API_VERSION=v1